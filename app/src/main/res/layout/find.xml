<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:baselineAligned="false"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FBB2B2"
        android:gravity="center"
        android:text="Find board"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        app:srcCompat="@drawable/couple" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text=" WEDDING INFORMATION"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:baselineAligned="false"
            android:orientation="vertical">

            <RadioGroup
                android:layout_width="fill_parent"
                android:layout_height="350dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/bt_1"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:text="리정혁&amp;윤세리"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/bt_2"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:text="안정원&amp;장겨울"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/bt_3"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:text="베르테르&amp;롯데"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/bt_4"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:text="비전&amp;완다"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/bt_5"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:text="허윤재&amp;성덕미"
                    android:textSize="18sp" />

            </RadioGroup>

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/bt_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:gravity="center"
        android:text="Select"
        app:backgroundTint="#FBB2B2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="16dp">

        <Button
            android:id="@+id/bt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="뒤로가기"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#FBD0A2" />

    </LinearLayout>

</LinearLayout>
