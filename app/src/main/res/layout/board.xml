                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/img4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/wedding4"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/img5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/wedding5"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/img6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/wedding6"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/img7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
